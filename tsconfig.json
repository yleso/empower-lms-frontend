{
  "compilerOptions": {
    "baseUrl": "src/",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@/pages/*": [
        "pages/*"
      ],
      "@/generic/*": [
        "components/generic/*"
      ],
      "@/components/*": [
        "components/*"
      ],
      "@/providers/*": [
        "providers/*"
      ],
      "@/services/*": [
        "services/*"
      ],
      "@/assets/*": [
        "assets/*"
      ],
      "@/types/*": [
        "types/*"
      ],
      "@/context/*": [
        "context/*"
      ],
      "@/hooks/*": [
        "hooks/*"
      ],
      "@/store/*": [
        "store/*"
      ],
      "@/utils/*": [
        "utils/*"
      ],
      "@/styles/*": [
        "styles/*"
      ],
      "@/vars/*": [
        "vars/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
